{
  "name": "bududak_mono",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "dev:blog": "turbo run dev --filter=blog",
    "dev:resume": "turbo run dev --filter=resume",
    "build": "turbo run build",
    "build:blog": "turbo run build --filter=blog",
    "build:resume": "turbo run build --filter=resume",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "issue": "node scripts/github/createIssue.mjs",
    "pr": "node scripts/github/createPullRequest.mjs",
    "sync": "node scripts/github/syncBranch.mjs"
  },
  "devDependencies": {
    "@inquirer/prompts": "^7.9.0",
    "dotenv": "^17.2.3",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "styled-components": "^6.1.19"
  }
}
